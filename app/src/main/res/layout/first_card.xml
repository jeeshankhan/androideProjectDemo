<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:background="@drawable/round_corner_card">

    <ImageView
        android:id="@+id/imageViewfc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/first_card"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagefc1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/dot"
        app:layout_constraintCircle="@id/imageViewfc1"
        app:layout_constraintCircleAngle="170"
        app:layout_constraintCircleRadius="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewfc1" />

    <ImageView
        android:layout_marginLeft="8dp"
        android:id="@+id/imagefc2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/dot"
        app:layout_constraintCircle="@id/imageViewfc1"
        app:layout_constraintCircleRadius="39dp"
        app:layout_constraintCircleAngle="200"
        app:layout_constraintTop_toBottomOf="@id/imageViewfc1"
        app:layout_constraintLeft_toRightOf="@id/imagefc1"
        />
    <ImageView
        android:layout_marginLeft="8dp"
        android:id="@+id/imagefc3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/dot"
        app:layout_constraintCircle="@id/imageViewfc1"
        app:layout_constraintCircleRadius="48dp"
        app:layout_constraintCircleAngle="220"
        app:layout_constraintTop_toBottomOf="@id/imageViewfc1"
        app:layout_constraintLeft_toRightOf="@id/imagefc2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>