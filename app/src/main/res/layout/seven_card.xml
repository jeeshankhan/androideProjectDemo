<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/card_7_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:padding="8dp"
    android:background="@drawable/round_corner_card"
    android:orientation="horizontal"
    android:id="@+id/layoutCard71"
    android:layout_width="185dp"

    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    >
    <ImageView
        android:src="@drawable/card_7_pt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="#0e315a"
        android:textAlignment="center"
        android:lineSpacingExtra="5sp"
        android:text="Ambulance  Support"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:background="@drawable/round_corner_card"
        android:orientation="horizontal"
        android:id="@+id/layoutCard72"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/layoutCard71"
        android:layout_marginLeft="8dp">

        <ImageView
            android:src="@drawable/card_7_pt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#0e315a"
            android:textAlignment="center"
            android:lineSpacingExtra="5sp"
            android:layout_marginLeft="8dp"
            android:text="Nursing Care at Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>